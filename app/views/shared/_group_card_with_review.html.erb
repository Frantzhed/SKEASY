<div class="rectangle rectangle-cards">
  <div class="teacher-and-availabilities">
      <div class="teacher-info">
        <h5> <%= booking.user.first_name %> <%= booking.user.last_name %> </h5>
          <div class="card-img-booking">
            <%= cl_image_tag booking.user.photo.key, width: 200, crop: :thumb, gravity: :face %>
          </div>
      </div>
      <div class="available-spots">
        <h3> Done ✓</h3>
      </div>
  </div>
  <div class="booking-info">
  <div class="infos">
      <div class="modal fade" id="indexModal-<%= booking.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-body">
               <%= render 'user_bookings/new_user_booking', booking: booking, user_booking: UserBooking.new %>
            </div>
          </div>
        </div>
      </div>
    <p><i class="far fa-calendar-alt category-image"></i><%= booking.end_date.strftime("%A %B %d") %></p>
    <p>
    <%= image_tag(booking.category + ".png", class:"category-image") %><%= booking.category %>
    </p>
    <p><i class="fas fa-mountain category-image"></i><%= booking.user.ski_resort %> </p>
    <div class="language-and-price">
      <p><i class="far fa-comments category-image"></i><%= booking.user.languages.to_sentence %></p>
      <div class="price-dashboard">
         Price: <%= booking.price %>€
      </div>
    </div>
  <!--                   <p> <%= booking.user.description %> </p> -->
  </div>


  </div>
  <div class="btn btn-success join book-button w-100" data-toggle="modal" data-target="#NewReviewModal"> Leave a review </div>
</div>
  <!-- Modal -->
  <div class="modal fade" id="NewReviewModal" tabindex="-1" role="dialog" aria-labelledby="NewReviewModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLongTitle">Leave a review</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= render "reviews/new", booking: booking %>
        </div>
      </div>
    </div>
  </div>
