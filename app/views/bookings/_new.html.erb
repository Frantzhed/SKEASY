

<div class="form-wrapper show-modal">
  <h2>Let's book your instructor</h2>

  <%= simple_form_for [ user, booking ] do |f| %>
    <%= f.input :start_date, as: :string,
      required: false, input_html: {class: "datepickr"} %>

    <%= f.input :end_date, as: :string,
      required: false, input_html: {class: "datepickr"} %>

    <%= f.input :category, as: :select, collection: Category::CATEGORIES, prompt: "Discipline",
      selected: params.dig(:user, :category)%>

    <%= f.input :group_session, label: "Do you want to share your lesson ? " %>

    <%= f.input :participants_number, label: "How many will you be ? " %>

    <%= f.submit "Submit your booking", class: "btn btn-primary" %>
  <% end %>
</div>

