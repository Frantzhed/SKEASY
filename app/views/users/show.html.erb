    <% else %>
        <img src="https://picsum.photos/200" alt="Avatar" class="pix-profile-teacher">
    <% end %>
    <div class="stars">
      <%= (@user.average_rating)%>
      <i class="fas fa-star"></i> <i class="fas fa-star"></i>
      <i class="fas fa-star"></i> <i class="far fa-star"></i>
    </div>
    <div class="card-specialities p-2">
      <h5>SPECIALITIES</h5>
      <div class="text-left">
        <% @user.categories.each do |category| %>
          <p> <%= category.name %> :
            <% category.note.times do %>
            <i class='fas fa-star'></i>
           <% end %>
          </p>
        <% end %>
      </div>
    </div>

    <div class="card-languages p-2">
      <h5>LANGUAGES</h5>
        <div class="text-left">
          <% User.last.languages.each do |language|%>
            <%= "#{language}" %>
          <% end %>
        </div>
    </div>
  </div>

  <div class="right-box">
    <h1 id="name"> Hey ! I'm <%= @user.first_name %></h1>
    <h5> üóª I'm teaching in <%=@user.ski_resort %> üóª</h5>
    <p id="greeting-message"> Hey everyone, my name is <%= @user.first_name %>.
