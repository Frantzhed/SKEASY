    </div>
    <div class="card-specialities p-2">
      <h5>SPECIALITIES</h5>
      <div class="text-left">
        <% @user.categories.each do |category| %>
          <p> <%= category.name %> :
            <% category.note.times do %>
            <i class='fas fa-star'></i>
           <% end %>
          </p>
        <% end %>
      </div>
    </div>

    <div class="card-languages p-2">
      <h5>LANGUAGES</h5>
