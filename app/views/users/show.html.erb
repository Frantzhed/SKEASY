      <div class="text-card">
        <h4> Past reviews :</h4>
      </div>
      <p> Average rating:<%= @user.average_rating %></p>
      <% @reviews.each do |review| %>
        <%= review.rate %> <%= review.content %>
      <% end %>
    </div>
    <h3> Videos <i class="fab fa-youtube p-2"></i> </h3>
    <iframe width="460" height="215" src="https://www.youtube.com/embed/fNRPiXes7OQ" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    <div class="book-button">
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#bookingModal">
          Book your lesson
      </button>
    </div>
    <div class="modal fade" id="bookingModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-body">
            <%= render "bookings/new", user: @user, booking: @booking %>
          </div>
        </div>
      </div>
    </div>
  </div>
