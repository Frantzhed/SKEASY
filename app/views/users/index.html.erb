
  <h1 class="resort-title" data-name= <%="#{params[:user][:resort]}" %>>   
    <%= params[:user][:resort] %>
  </h1>


<div class="container multi-drop-down" data-controller="filters">
    
    <%= simple_form_for :user, url: users_path, method: :get, defaults: {
      input_html: { data: { action: "change->filters#submit"}}
    } do |f| %>
        <%= f.input :category, as: :select, collection: Category::CATEGORIES, prompt: "Discipline", 
        selected: params[:user][:category]%>
        <%= f.input :technical_skill, as: :select, collection: User::TECHNICALSKILL, prompt: "Level", 
        selected: params[:user][:technical_skill]%>
        <%= f.input :languages, as: :select, collection: User::LANGUAGES, prompt: "Language", 
        selected: params[:user][:languages]%>
        <%= f.submit  class: "d-none", data: {target: "filters.submit"} %>
    <% end %>

    
    
</div>

<div class="container price-info">
  <h1>Share your lesson and divide the price !</h1>
  <h2>Private booking 85 € / hour | Shared booking up to 21 € / hour </h2>
  <%if @users.count==0 %>
  <h2>No instructors matching search</h2>
  <% end %>
</div>

<div class="d-flex bd-highlight teacher-cards flex-wrap">
    <% @users.each do |user|%>
      <%= user.photo %>
      <%= render "shared/teacher_card", teacher: user %>
    <% end %>
</div>

<div class="d-flex bd-highlight booking-cards">
  <div class="p-2 flex-fill bd-highlight">Flex item</div>
  <div class="p-2 flex-fill bd-highlight">Flex item</div>
  <div class="p-2 flex-fill bd-highlight">Flex item</div>
  <div class="p-2 flex-fill bd-highlight">Flex item</div>
</div>

<ol>
    <% @users.each do |user|%>
      <li><%= user.first_name %>/<%= user.last_name %> ---<%= user.categories.first&.name %> ---<%= user.languages %>--- <%= user.technical_skill%> --- <%= user.ski_resort %></li>
      <%= link_to "show", user_path(user) %>
    <% end %>
</ol>
